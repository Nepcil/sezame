{% extends 'base.html.twig' %}

{% block title %}Hello CollectionController!{% endblock %}

{% block body %}

    <h1>Collection de bandes dessinées</h1>
    <div class="cadreBook">
        {% if collections is defined %}
            {% for collection in collections %}
                <h2 class="titleSlide">{{ collection.title }}</h2>
                <div class="cadreImg">
                    <div class="sousCadreImg">
                        <a href="{{ path('app_pageBook')}}">
                            <img class="imgBook" src="{{ asset('interface/lanfeust.jpg') }}" alt="{{ collection.title }}">
                        </a>
                    </div>
                </div>
                <div class="example-wrapper">
                    <h2 class="marginL">{{ collection.title }}</h2>
                    <p class="price">{{ collection.price }} €</p>
                </div>
            {% endfor %}
            {% else %}
                <span class="empty">
                    {% include "_part/pageNotFound.html.twig" %}
                </span>
        {% endif %}
{% endblock %}
