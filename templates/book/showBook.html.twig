{% extends 'base.html.twig' %}

{% block title %}Les BD : bande dessinées{% endblock %}

{% block body %}
    <h1>Liste de bandes dessinées</h1>
    <div class="cadreBookSh">
        {% if books | length > 0 %}
            {% for book in books %}
                    <ul class="list">
                        <li><h2>{{ book.title }}</h2></li>
                        <li><a href=""><img src="{{ asset('interface/lanfeust.jpg') }}" alt="{{ book.title }}"></a></li>
                        {# src="{{ asset( book.picture ) | imagine_filter('thumbnail') }}"  #}
                        {# <li><p>{{ book.author.firstname }} {{ book.author.lastname }}</p></li> #}
                        <div class="cadreShowBook"> 
                        <li><p>{{ book.price }} €</p></li>
                        <li><p>{{ book.summary | striptags }}</p></li>
                        </div>
                    </ul>
            {% endfor %}
        {% endif %}
    </div>
{% endblock %}